<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= homeContent %></p>

<% allPosts.forEach(function(p) { %>
<div class="row">
    <div class="col">
        <h2><%= p.Title %> </h2>
    </div>
    <div class="col text-end">
        <small> <%= p.DateCreate %> </small>
    </div>
</div>
    <% if (p.Content.length > 100) { %>
        <% var slicedPost = p.Content.slice(0, 133) + "..."; %>
<p><%= slicedPost %><a href="/post/<%= p.Title %>"> Read more</a></p>
    <% } else { %>
<p><%= p.Content %><a href="/post/<%= p.Title %>"> Read more</a></p>
    <% } %>
<% }) %>

<%- include('partials/footer'); -%>
